{
  "compilerOptions": {
    /* 1. Strict Mode (Sobcheye Guruttopurno) */
    "strict": true, // Sob strict rules eksathe chalu kore
    "noImplicitAny": true, // Variable-er type na likhle error dibe
    "strictNullChecks": true, // null ba undefined niye kora shashon korbe
    "strictFunctionTypes": true, // Function parameter thikmoto check korbe

    "skipDefaultLibCheck": true /* 2. Linter-er moto kaj korbe */,
    "noUnusedLocals": true, // Variable declare kore bebohar na korle error dibe
    "noUnusedParameters": true, // Function-er parameter bebohar na korle error dibe
    "noImplicitReturns": true,
    /* 3. Next.js & Modern Environment */
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // External library (Prisma etc) er vitorer error ignore korbe
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    // "noImplicitAny": true,
    // "strict": true,
    // "noEmit": true,
    // "esModuleInterop": true,
    // "module": "esnext",
    // "moduleResolution": "bundler",
    // "resolveJsonModule": true,
    // "isolatedModules": true,
    // "jsx": "react-jsx",
    // "incremental": true,
    // "plugins": [
    // {
    // "name": "next"
    // }
    // ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
